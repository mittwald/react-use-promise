{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",
    "stripInternal": true,
    "declaration": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "strictFunctionTypes": true,
    "strictNullChecks": true
  },
  "exclude": ["test-d/**/*", "*.test.ts"],
  "include": ["src/**/*.ts"],
  "ts-node": {
    "esm": true
  }
}
