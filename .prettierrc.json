{
  "arrowParens": "always",
  "bracketSpacing": true,
  "htmlWhitespaceSensitivity": "css",
  "jsxSingleQuote": false,
  "overrides": [
    {
      "files": ["*.json", "*.yaml", "*.yml"],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": ["apps/docs/src/content/**/examples/*.tsx"],
      "options": {
        "printWidth": 60
      }
    }
  ],
  "plugins": [
    "prettier-plugin-sort-json",
    "prettier-plugin-jsdoc",
    "prettier-plugin-pkgsort"
  ],
  "printWidth": 80,
  "proseWrap": "always",
  "quoteProps": "as-needed",
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "all"
}
